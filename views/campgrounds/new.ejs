<% layout("layouts/boilerplate") %>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-md-6 offset-md-3">
    <form
      class="needs-validation"
      action="/campgrounds"
      method="POST"
      enctype="multipart/form-data"
      novalidate
    >
      <div>
        <label class="form-label mb-3" for="title">Title: </label>
        <input
          class="form-control mb-3"
          type="text"
          id="title"
          name="campground[title]"
          placeholder="Campground title"
          required
        />
        <div class="valid-feedback mb-3">Looks good!</div>
        <label class="form-label mb-3" for="location">Location: </label>
        <input
          class="form-control mb-3"
          type="text"
          id="location"
          name="campground[location]"
          placeholder="Campground location"
          required
        />
        <div class="valid-feedback mb-3">Looks good!</div>
        <!-- <label class="form-label mb-3" for="image">Image URL: </label>
        <input
          class="form-control mb-3"
          type="text"
          id="image"
          name="campground[image]"
          placeholder="Campground image url"
          required
        /> -->
        <!-- <div class="valid-feedback mb-3">Looks good!</div> -->
        <!-- <input class="mb-3" type="file" name="image" id="image" multiple /> -->
        <div class="mb-3">
          <label class="form-label mb-3" for="price">Price: </label>
          <div class="input-group mb-3" id="price">
            <div class="input-group-append">
              <span class="input-group-text">$</span>
            </div>
            <input
              type="text"
              name="campground[price]"
              class="form-control"
              placeholder="0.00"
              aria-label="Dollar amount (with dot and two decimal places)"
              required
            />
            <div class="valid-feedback mb-3">Looks good!</div>
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label mb-3" for="image">Description: </label>
          <textarea
            class="form-control mb-3"
            type="text"
            id="description"
            name="campground[description]"
            placeholder="Campground Description"
            required
          ></textarea>
          <div class="valid-feedback mb-3">Looks good!</div>
        </div>
        <div class="mb-3">
          <label for="formFileMultiple" class="form-label">Images: </label>
          <input
            class="form-control"
            type="file"
            id="formFileMultiple"
            name="image"
            multiple
          />
        </div>
      </div>
      <button class="btn btn-success mb-3">Submit</button>
    </form>
    <a href="/campgrounds">Back to all Campgrounds</a>
  </div>
</div>
